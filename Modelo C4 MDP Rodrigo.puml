LAYOUT_WITH_LEGEND()

  System(app2, "Usuario", "El usuario interactua la aplicacion", $sprite="person")

Enterprise_Boundary(c1, "Contexto") {
    System(app, "Sistema web de agenda de eventos", "Aplicacion de escritorio para adminstrar un inventario", $sprite="web")


  


    System_Boundary(c2, "Contenedores") {
        ContainerDb(bd, "Base de Datos", "MySQL", "La base de datos se va encargar de cargar los datos ala tabla de Eventos", $sprite="mysql")
        Container(api, "Programa", "CSHARP", "Contiene las funciones de Guardar, Modificar, Buscar y Eliminar", $sprite="csharp")


        Container_Boundary(c3, "Componente") {
            Component(Flask, "Form1", "Flask", "Se encarga de llamar alas Rutas de Buscar, Modificar, Buscar y eliminar", $sprite="csharp")
            

        }


        
        Container(angular, ".NET", "Form1.Designer", "Framework principal", $sprite="framework7_original")
        
        

       
    }
}


BiRel_D(api, bd, "", "Consulta en la base de datos")

Rel_R(app2, app, "", "Interaccion del usuario con la aplicacion")
BiRel_R(app, c2, "", "Interaccion con el sistema")
BiRel_D(angular, api, "", "El codigo le envia una peticion le devuelve datos a angular")
Rel_D(api, c3, "", "Csharp envia y recibe datos")


@enduml
